# --- Database ---
POSTGRES_USER=rag
POSTGRES_PASSWORD=ragpwd
POSTGRES_DB=ragdb

# --- Service Ports ---
QDRANT_PORT=6333
API_PORT=8000
UI_PORT=8501
OLLAMA_PORT=11434

# --- RAG / Vector Store ---
QDRANT_COLLECTION=regdocs_v1
EMBED_MODEL=nomic-embed-text   # 768-dim
RAG_MIN_SCORE=0.0              # start relaxed; raise to 0.55+ once retrieval works
RAG_MIN_DOCS_REQUIRED=1
RAG_TOP_K=8                    # default number of retrieved chunks

# Debug/behavior flags
RAG_DEBUG=true                 # true = show raw hits in /ask response
RAG_FORCE_ANSWER=true          # true = answer best-effort even if context is weak

# --- Generation (LLM) ---
GEN_MODEL=mistral:7b-instruct
GEN_TEMPERATURE=0.1
GEN_MAX_TOKENS=384

# --- LLM Runtime ---
LLM_CTX=4096
OLLAMA_NUM_PARALLEL=1
OLLAMA_KEEP_ALIVE=30m

# --- Timeouts ---
OLLAMA_CONNECT_TIMEOUT=10
OLLAMA_READ_TIMEOUT=600

# --- Ollama Models (auto-pulled at startup via ollama-init) ---
OLLAMA_MODELS=mistral:7b-instruct,nomic-embed-text